<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB000000"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ad_inner_image"
        android:layout_width="435dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/ad_inner_play"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/ad_inner_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/ad_inner_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ad_inner_btn_cancel"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ad_inner_close_text"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ad_inner_circle"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</RelativeLayout>
