<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ad_dialog_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">

        <RelativeLayout
            android:id="@+id/iconClickArea"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/iconButton"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ad_view_coner"
                android:clickable="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                tools:text="点击下载" />

            <TextView
                android:id="@+id/iconTitle"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/iconButton"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/background_dark"
                android:textSize="10dp"
                tools:text="UPLTV" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iconGifImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/iconClickArea"
            android:background="@android:color/holo_green_light"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY" />
    </RelativeLayout>
</FrameLayout>