<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/ad_debug_header"
        layout="@layout/ad_activity_debug_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ad_debug_header"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/adUnionLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AAAAAA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/logMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/black"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/ad_debug_explain"
        layout="@layout/ad_activity_debug_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_debug_header"
        android:layout_marginLeft="16dp"
        android:visibility="gone" />
</RelativeLayout>