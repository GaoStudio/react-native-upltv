<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ad_inner_color_gray_dark"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ad_inner_exit_list_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ad_inner_btn_close_exit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ad_inner_exit_list_close"
            android:background="@color/ad_inner_color_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ad_inner_exit_list_close">

            <RelativeLayout
                android:id="@+id/ad_inner_exit_list_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <Button
                    android:id="@+id/ad_inner_exit_list_button_more"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ad_inner_btn_bg_green_large"
                    android:text="@string/ad_exit_more"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/ad_inner_exit_list_button_yes"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="32dp"
                    android:layout_toLeftOf="@id/ad_inner_exit_list_button_more"
                    android:background="@drawable/ad_inner_btn_bg_gray"
                    android:text="@string/ad_exit_yes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/ad_inner_exit_list_button_cancel"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@id/ad_inner_exit_list_button_more"
                    android:background="@drawable/ad_inner_btn_bg_gray"
                    android:text="@string/ad_exit_no"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/ad_inner_exit_confirm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ad_inner_exit_list_bottom_layout"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/ad_exit_game"
                android:textAlignment="center"
                android:textSize="18dp"/>

            <ListView
                android:id="@+id/ad_inner_exit_list_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ad_inner_exit_confirm_text"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scrollbars="none"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/ad_inner_exit_confirm_text"
                android:layout_marginBottom="32dp"
                android:background="@color/ad_inner_color_line"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
